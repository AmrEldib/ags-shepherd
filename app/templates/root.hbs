
<div class="wrapper">
	<div class="box">
	{{#if mode.isRoot}}
    	{{#link-to "root" model}}{{model.host}}/{{model.instance}}{{/link-to}}<br/>
	{{else}}
		{{#link-to "root" model}}{{model.folder}}{{/link-to}}<br/>
	{{/if}}
    {{model.currentVersion}} <br/>

    <h2>Folders</h2>
    <ul>
      {{#each model.folders as |folder|}}
        <li>{{#link-to "root.folder" folder.name}}{{folder.name}}{{/link-to}}</li>
      {{/each}}
    </ul>

    <h2>Services</h2>
    <ul>
      {{#each model.services as |service|}}
        <li>{{#link-to (concat "root." service.serviceType) service.serviceName}}{{service.serviceName}}{{/link-to}}</li>
      {{/each}}
    </ul>
	</div>

  <div class="box">
		{{outlet}}
	</div>
</div>
